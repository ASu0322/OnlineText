doctype html
html(lang='zh-Hant-TW')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title 登入
    // Bootstrap CSS
    link(rel='stylesheet', href='/bootstrap-4.0.0-dist/css/bootstrap.min.css')
    script(src='https://kit.fontawesome.com/f46675eb01.js', crossorigin='anonymous')
    // whole background
    style(type='text/css').
      html{
      margin: 0;
      padding: 0;
      height: 100%;
      }
      body{
      background-image: url("/images/login_background3.png");
      background-repeat: no-repeat;
      background-size: 1920px 1080px;
      height: 100%;
      }
      .col-center-block{
      float: none;
      display: block;
      margin-left: auto;
      margin-right: auto;
      margin-top: 30%;
      text-align: center;
      max-width: 500px;
      background-color: rgb(58, 58, 58);
      }
      .edit{
      margin-top: 5px;
      }
      .textcolor{
      color: white;
      }
  body
    script(type='text/javascript').
      let ws = new WebSocket('ws://localhost:3000')
      //開啟後執行的動作，指定一個 function 會在連結 WebSocket 後執行
      ws.onopen = () => {
          console.log('open connection')
      }

      ws.onclose = () => {
          console.log('close connection')
      }

      //接收 Server 發送的訊息
      ws.onmessage = event => {
          console.log(event)
      }
    .container
      .row.row-centerd
        .col-xs-6.col-md-4.col-center-block
          h1.textcolor 歡迎登入
          form(role='form', action='login', method='POST')
            .form-group
              label.textcolor(for='InputEmail') 電子郵件
              input#InputEmail_login.form-control(type='email', name='user_account', placeholder='請輸入信箱')
            .form-group
              label.textcolor(for='InputPassword') 密碼
              input#InputPassword_login.form-control(type='password', name='user_password', placeholder='請輸入密碼')
            div
              button#login_check.btn.btn-default(type='submit', name='login_check') 登入
          form(role='form', action='register', method='GET')
            div
              button#register.btn.btn-default(type='submit', name='register') 註冊
    script(src='/bootstrap-4.0.0-dist/js/jquery/dist/jquery.min.js')
    script(src='/bootstrap-4.0.0-dist/js/popper.js/dist/popper.min.js')
